    <script type="text/javascript">
        $(document).ready(function () {
            checkSession();
            var idList = '#mainTable';
            //Modal
            //API
            var layDSLoaiPhong = 'Quanly/LayDanhSachLoaiPhong';
            var suaLoaiPhong = 'Quanly/CapNhatLoaiPhong';
          
            loadData(layDSLoaiPhong, function (data) {
                var i = -1;
                $(idList).DataTable({
                    destroy: true,
                    data: data,
                    columns: [
                        {
                            'data': null,
                            'render': function (data, type, row) {
                                return '<label value="' + row.LoaiPhong + '">Phòng Loại ' + row.LoaiPhong + '</label>'
                            }
                        },
                        {
                            'data': null,
                            'render': function (data, type, row) {
                                i++;
                                return '<input type="number" pattern="-?[0-9]*(\.[0-9]+)?" style="text-align:center;width: 125px; border: none;padding: 10px 5px;background: none;" id="gia' + i + '" step="500000" name="gia" value="' + row.Gia + '">'
                                
                            }
                        }
                    ]
                });
            });

            $('#luu').click(function () {
                var list = [];
                for (i = 0; i < 4; i++) {
                    var obj = {
                        LoaiPhong: i + 1,
                        Gia: $('#gia' + i).val()
                    }
                    list.push(obj);
                }
                editData(suaLoaiPhong, list);
            })

        });
    </script>
